### title
case "$TERM" in
  xterm*|rxvt*)
      function xtitle () {
          builtin print -n -- "\e]0;$@\a"
      }
      ;;
  screen)
      function xtitle () {
          builtin print -n -- "\ek$@\e\\"
      }
      ;;
  *)
      function xtitle () {
      }
esac

function precmd () {
    xtitle "$(print -P $HOST: '%~')"
}
### end title

